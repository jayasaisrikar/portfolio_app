{
    "version": 2,
    "builds": [
        {
            "src": "portfolio/wsgi.py",
            "use": "@vercel/python",
            "config": { 
                "maxLambdaSize": "15mb",
                "runtime": "python3.9",
                "installCommand": "curl -sSL https://bootstrap.pypa.io/get-pip.py | python3.9 && python3.9 -m pip install -r requirements.txt",
                "buildCommand": "DISABLE_DATABASE=True python3.9 manage.py collectstatic --noinput"
            }
        },
        {
            "src": "static/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "portfolio/wsgi.py"
        }
    ],
    "env": {
        "PYTHON_VERSION": "3.9",
        "DISABLE_DATABASE": "False"
    }
} 