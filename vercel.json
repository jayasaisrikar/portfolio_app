{
    "version": 2,
    "builds": [
        {
            "src": "portfolio/wsgi.py",
            "use": "@vercel/python",
            "config": { 
                "maxLambdaSize": "15mb",
                "runtime": "python3.9",
                "installCommand": "pip install -r requirements.txt",
                "buildCommand": "python manage.py collectstatic --noinput"
            }
        },
        {
            "src": "media/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/staticfiles/$1",
            "headers": { "cache-control": "public, max-age=31536000, immutable" }
        },
        {
            "src": "/media/(.*)",
            "dest": "/media/$1",
            "headers": { "cache-control": "public, max-age=31536000, immutable" }
        },
        {
            "src": "/(.*)",
            "dest": "portfolio/wsgi.py"
        }
    ]
    
}