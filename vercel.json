{
    "version": 2,
    "builds": [
        {
            "src": "portfolio/wsgi.py",
            "use": "@vercel/python",
            "config": { 
                "maxLambdaSize": "15mb",
                "runtime": "python3.9",
                "pip": [
                    "Django==4.2.7",
                    "dj-database-url==2.1.0",
                    "django-cors-headers==4.3.0",
                    "whitenoise==6.6.0",
                    "psycopg2-binary==2.9.9",
                    "djangorestframework==3.14.0",
                    "huggingface-hub==0.19.4",
                    "Pillow==10.1.0",
                    "python-dotenv==1.0.0",
                    "requests==2.31.0",
                    "gunicorn==21.2.0"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "portfolio/wsgi.py"
        }
    ]
} 