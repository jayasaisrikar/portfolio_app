{
    "version": 2,
    "framework": "other",
    "buildCommand": "pip install -r requirements.txt && python manage.py collectstatic --noinput",
    "outputDirectory": "staticfiles",
    "builds": [
        {
            "src": "portfolio/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.9"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "portfolio/wsgi.py"
        }
    ]
} 